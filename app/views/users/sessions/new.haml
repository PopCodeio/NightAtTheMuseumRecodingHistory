= render 'shared/alerts'
.container
  #login
    .form-inline.text-center
      .form-group
        %h1= tr(:login)
      -#.form-group.social-icon-group
        = link_to tr(:facebook_login), user_omniauth_authorize_url(:facebook), class: 'fb social-icon'
        = link_to tr(:twitter_login), user_omniauth_authorize_path(:twitter), class: 'twitter social-icon'
        = link_to tr(:gmail_login), user_omniauth_authorize_path(:google_oauth2), class: 'gplus social-icon '
    .platter-middle
      = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        = render 'shared/simple_form_errors', f: f
        .form-group
          = f.input :email, label: false, input_html: { class: 'lr-input', placeholder: tr(:email).to_s.titleize, size: '100' }
        .form-group
          = f.input :password, label: false, input_html: { class: 'lr-input', placeholder: tr(:password).to_s.titleize, size: '100' }
        .form-group
          .platter-split
            = button_tag tr(:login).to_s.titleize, :class => 'lr-btn btn-block'
          .platter-split
            %label.checkbox
              = f.input  :remember_me, :as => :boolean, input_html: { :checked => "checked"}, :inline_label => tr(:remember_me).to_s.titleize if devise_mapping.rememberable?
      .platter-bottom
        = link_to tr(:forgot_password).to_s.titleize, new_password_path(resource_name), class: 'password'
        |
        = link_to tr(:sign_up), new_user_registration_path


