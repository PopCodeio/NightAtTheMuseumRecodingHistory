#recover
  .platter
    .platter-top
      %h1= tr(:forgot_password)
    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
      .platter-middle
        = render 'shared/alerts'
      .platter-middle
        = render 'shared/simple_form_errors', f: f
        = f.input :password, label: false, input_html: { class: 'lr-input', placeholder: tr(:password).to_s.titleize, size: '100' }
        = f.input :password_confirmation, label: false, input_html: { class: 'lr-input', placeholder: tr(:password_confirmation).to_s.titleize, size: '100' }
      .platter-bottom
        .form-group
          .platter-split
            = link_to tr(:back), new_user_session_path, class: 'lr-btn btn-block'
          .platter-split
            = f.button :submit, tr(:reset_password),:class => 'lr-btn btn-block'

