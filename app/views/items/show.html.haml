#phototag
  .container
    .row
      .text-center
        - if item.picture_url.to_s.empty? 
          %img{src:'http://placehold.it/500x300', class:'img-thumbnail'}
        - else
          = image_tag item.picture_url, class:'img-thumbnail'
    .row

      .form-group
        = form_tag :photo_tags, method: 'puts', id:'playform' do
          #tags
          = hidden_field_tag :item, 1
          = submit_tag 'submit'

